#!/bin/sh
[ "$DEBUG" ] && set -x
root=$(cd "$(dirname "$(readlink -f $0)")/.."; pwd)
set -e

cd $root
if [ $# -eq 1 ] && [ -f "vendor/sync/$1" ]; then
  sync=$1 && shift
  exec "vendor/sync/$sync" \
    "$@"

elif [ $# -gt 0 ]; then
  >&2 echo "Unknown Image."
  exit 1
else
  mkdir -p images
  rm -rf images/*

  for v in options/versions/*; do
    v="$(basename $v)"
    version=$(cat options/versions/$v)
    mkdir -p images/$v
    img="images/$v"

    [ -f .dockerignore ] && cp .dockerignore $img/.dockerignore
    cp copy -R $img/copy

    mkdir -p $img/copy/usr/share/ruby
    cp options/gems/$v $img/copy/usr/share/ruby/default-gems
    cat Dockerfile | sed -r "s!__VERSION__!$version!" > $img/Dockerfile
    sed -ri "s/__TYPE__/$v/" $img/Dockerfile
    cp README.md $img/README.md
  done
fi
